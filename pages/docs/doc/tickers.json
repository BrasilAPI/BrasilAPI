{
  "tags": [
    {
      "name": "TICKERS",
      "description": "Tickers do Brasil"
    }
  ],
  "paths": {
    "/tickers/b3/acoes/v1": {
      "get": {
        "summary": "Retorna a lista de tickers das empresas listadas na B3",
        "description": "Endpoint para obter a lista completa de tickers de empresas listadas na B3 (Brasil, Bolsa, Balcão)",
        "tags": [
          "TICKERS"
        ],
        "responses": {
          "200": {
            "description": "Lista de tickers retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Ticker"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro ao obter os dados dos tickers"
          }
        }
      }
    },
    "/tickers/b3/fundos/v1/{typeFund}": {
      "get": {
        "summary": "Retorna a lista de tickers de fundos de investimento listados na B3",
        "description": "Endpoint para obter a lista completa de tickers de fundos de investimento listados na B3 de acordo com o tipo especificado",
        "tags": [
          "TICKERS"
        ],
        "parameters": [
          {
            "name": "typeFund",
            "in": "path",
            "required": true,
            "description": "Tipo de fundo de investimento",
            "schema": {
              "type": "string",
              "enum": ["FII", "SETORIAL", "FIAGRO-FII", "FIAGRO-FIDC", "FIAGRO-FIP", "FIP", "FIA"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de tickers de fundos retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TickerInvestmentFund"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Tipo de fundo inválido ou não especificado"
          },
          "500": {
            "description": "Erro ao obter os dados dos tickers"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Ticker": {
        "type": "object",
        "properties": {
          "code_CVM": {
            "type": "string"
          },
          "issuing_company": {
            "type": "string"
          },
          "company_name": {
            "type": "string"
          },
          "trading_name": {
            "type": "string"
          },
          "cnpj": {
            "type": "string"
          },
          "market_indicator": {
            "type": "string"
          },
          "type_BDR": {
            "type": "string"
          },
          "date_listing": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "segment": {
            "type": "string"
          },
          "segment_eng": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "market": {
            "type": "string"
          }
        },
        "example": {
          "code_CVM": "1023",
          "issuing_company": "BBAS",
          "company_name": "BCO BRASIL S.A.",
          "trading_name": "BRASIL",
          "cnpj": "191",
          "market_indicator": "18",
          "type_BDR": "",
          "date_listing": "18/06/1921",
          "status": "A",
          "segment": "Bancos",
          "segment_eng": "Banks",
          "type": "1",
          "market": "NM"
        }
      },
      "TickerInvestmentFund": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "type_name": {
            "type": "string",
            "nullable": true
          },
          "acronym": {
            "type": "string"
          },
          "fund_name": {
            "type": "string"
          },
          "trading_name": {
            "type": "string"
          }
        },
        "example": {
          "id": 1234,
          "type_name": "FII",
          "acronym": "HGLG11",
          "fund_name": "CSHG LOGÍSTICA FUNDO DE INVESTIMENTO IMOBILIÁRIO",
          "trading_name": "CSHG LOGÍSTICA"
        }
      }
    }
  }
}
