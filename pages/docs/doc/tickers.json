  "paths": {
    "/tickers/b3/v1": {
      "get": {
        "summary": "Retorna a lista de tickers das empresas listadas na B3",
        "description": "Endpoint para obter a lista completa de tickers de empresas listadas na B3 (Brasil, Bolsa, Balc√£o)",
        "tags": [
          "TICKERS"
        ],
        "responses": {
          "200": {
            "description": "Lista de tickers retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Ticker"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro ao obter os dados dos tickers"
          }
        }
      }
    }
  },
