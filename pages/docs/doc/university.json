    "paths": {
        "/University/v1": {
            "get": {
                "tags": ["UNIVERSITY"],
                "summary": "Obter informações sobre universidade.",
                "description": "As universidades brasileiras são fundamentais para a propagação e avanço da tecnologia e do conhecimento na sociedade.\n",
                "parameters": [
                    {
                        "name": "university",
                        "description": "ID único da universidade.",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "format": "university"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/University"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nenhuma universidade foi encontrada.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "NotFoundError",
                                    "message": "Universidade não encontrada."
                                }
                            }
                        }
                    }
                }
            }
        }
    },
