                    },
                    "CATEGORIA_DA_IES": {
                        "type": "string"
                    },
                    "UF": {
                        "type": "string"
                    }
                },
                "example": {
                    "CODIGO_DA_IES": 7,
                    "NOME_DA_IES": "UNIVERSIDADE FEREDERAL DE SÃO CARLOS",
