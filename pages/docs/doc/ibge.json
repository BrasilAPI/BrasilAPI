        "/ibge/uf/v1": {
            "get": {
                "tags": ["IBGE"],
                "summary": "Retorna informações de todos estados do Brasil",
                "description": "",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/State"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ibge/uf/v1/{code}": {
            "get": {
                "tags": ["IBGE"],
                "summary": "Busca as informações de um estado a partir da sigla ou código",
                "description": "",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/State"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "O código / sigla do estado não foi encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage"
                                },
                                "example": {
                                    "name": "NotFoundError",
                                    "message": "UF não encontrada.",
                                    "type": "not_found"
                                }
                            }
                        }
                    }
                }
            }
