{
    "tags": [
        {
            "name": "FIPE",
            "description": "Tabela FIPE de preços de veículos. Consulta valores de carros, motos e caminhões usados segundo a Fundação Instituto de Pesquisas Econômicas. Inclui dados históricos e atuais."
        }
    ],
    "paths": {
        "/fipe/marcas/v1/{tipoVeiculo}": {
            "get": {
                "tags": ["FIPE"],
                "summary": "Lista as marcas de veículos referente ao tipo de veículo",
                "description": "",
                "parameters": [
                    {
                        "name": "tipoVeiculo",
                        "description": "Os tipos suportados são `caminhoes`, `carros` e `motos`. Quando o tipo não é específicado são buscada as marcas de todos os tipos de veículos\n",
                        "in": "path",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "string"
                        }
                    },
                    {
                        "name": "tabela_referencia",
                        "description": "Código da tabela fipe de referência. Por padrão é utilizado o código da tabela fipe atual.\n",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/MarcaFIPE"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Tabela de referência inválida",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage"
                                },
                                "example": {
                                    "message": "Tabela de referência inválida",
                                    "type": "bad_request",
                                    "name": "BadRequestError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/fipe/preco/v1/{codigoFipe}": {
            "get": {
                "tags": ["FIPE"],
                "summary": "Consulta o preço do veículo segundo a tabela FIPE.",
                "description": "Retorna informações detalhadas sobre o preço de um veículo específico de acordo com a tabela FIPE, incluindo valor, marca, modelo e outras informações relevantes.",
                "parameters": [
                    {
                        "name": "codigoFipe",
                        "description": "Código FIPE do veículo que identifica unicamente um modelo específico na tabela FIPE. Exemplo: 001004-9 para Fiat Palio EX 1.0.",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "pattern": "^[0-9]{6}-[0-9]$",
                            "example": "001004-9"
                        }
                    },
                    {
                        "name": "tabela_referencia",
                        "description": "Código da tabela FIPE de referência para consulta. Se não especificado, utiliza a tabela mais atual disponível.",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int64",
                            "example": 295
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/VeiculoFIPE"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage"
                                },
                                "examples": {
                                    "Código Fipe Inválido": {
                                        "value": {
                                            "name": "BadRequestError",
                                            "message": "Código fipe inválido",
                                            "type": "bad_request"
                                        }
                                    },
                                    "Tabela FIPE Inválida": {
                                        "value": {
                                            "name": "BadRequestError",
                                            "message": "Tabela de referência inválida",
                                            "type": "bad_request"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/fipe/tabelas/v1": {
            "get": {
                "tags": ["FIPE"],
                "summary": "Lista as tabelas de referência existentes.",
                "description": "",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/TabelaFIPE"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/fipe/veiculos/v1/{tipoVeiculo}/{codigoMarca}": {
            "get": {
                "tags": ["FIPE"],
                "summary": "Lista os veículos de acordo com a marca e o tipo de veículo",
                "description": "",
                "parameters": [
                    {
                        "name": "tipoVeiculo",
                        "description": "Os tipos suportados são `caminhoes`, `carros` e `motos`.\n",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "string"
                        }
                    },
                    {
                        "name": "codigoMarca",
                        "description": "Código da marca do veiculo. Para consultar as marcas acesse a rota `/fipe/marcas/v1/`",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    },
                    {
                        "name": "tabela_referencia",
                        "description": "Código da tabela fipe de referência. Por padrão é utilizado o código da tabela fipe atual.\n",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/VeiculoMarcaFIPE"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage"
                                },
                                "example": {
                                    "message": "Requisição inválida",
                                    "type": "bad_request",
                                    "name": "BadRequestError"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "TabelaFIPE": {
                "title": "Tabelas de referência FIPE",
                "required": ["codigo", "mes"],
                "type": "object",
                "properties": {
                    "codigo": {
                        "type": "integer"
                    },
                    "mes": {
                        "type": "string"
                    }
                },
                "example": {
                    "codigo": 271,
                    "mes": "junho/2021 "
                }
            },
            "MarcaFIPE": {
                "title": "Marcas FIPE",
                "required": ["nome", "valor"],
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "valor": {
                        "type": "integer"
                    }
                },
                "example": {
                    "nome": "AGRALE",
                    "valor": "102"
                }
            },
            "VeiculoFIPE": {
                "title": "Informações Detalhadas do Veículo FIPE",
                "description": "Dados completos de um veículo conforme a tabela FIPE, incluindo preço e especificações",
                "required": [
                    "valor",
                    "marca",
                    "modelo",
                    "anoModelo",
                    "combustivel",
                    "codigoFipe",
                    "mesReferencia",
                    "tipoVeiculo",
                    "siglaCombustivel",
                    "dataConsulta"
                ],
                "type": "object",
                "properties": {
                    "valor": {
                        "type": "string",
                        "description": "Preço do veículo formatado em reais (ex: R$ 6.022,00)"
                    },
                    "marca": {
                        "type": "string",
                        "description": "Nome da marca do veículo"
                    },
                    "modelo": {
                        "type": "string",
                        "description": "Nome do modelo específico do veículo"
                    },
                    "anoModelo": {
                        "type": "integer",
                        "description": "Ano de fabricação do modelo"
                    },
                    "combustivel": {
                        "type": "string",
                        "description": "Tipo de combustível (Gasolina, Álcool, Flex, Diesel, etc.)"
                    },
                    "codigoFipe": {
                        "type": "string",
                        "description": "Código FIPE único do veículo (formato: XXXXXX-X)"
                    },
                    "mesReferencia": {
                        "type": "string",
                        "description": "Mês e ano de referência da tabela FIPE utilizada"
                    },
                    "tipoVeiculo": {
                        "type": "integer",
                        "description": "Código do tipo de veículo (1=carro, 2=moto, 3=caminhão)"
                    },
                    "siglaCombustivel": {
                        "type": "string",
                        "description": "Sigla do tipo de combustível (G, Á, F, D, etc.)"
                    },
                    "dataConsulta": {
                        "type": "string",
                        "description": "Data e hora da consulta realizada"
                    }
                },
                "example": {
                    "valor": "R$ 6.022,00",
                    "marca": "Fiat",
                    "modelo": "Palio EX 1.0 mpi 2p",
                    "anoModelo": 1998,
                    "combustivel": "Álcool",
                    "codigoFipe": "001004-9",
                    "mesReferencia": "junho de 2021 ",
                    "tipoVeiculo": 1,
                    "siglaCombustivel": "Á",
                    "dataConsulta": "segunda-feira, 7 de junho de 2021 23:05"
                }
            },
            "VeiculoMarcaFIPE": {
                "title": "Veiculos FIPE",
                "required": ["modelo"],
                "type": "object",
                "properties": {
                    "modelo": {
                        "type": "string"
                    }
                },
                "example": {
                    "modelo": "Palio EX 1.0 mpi 2p"
                }
            }
        }
    }
}
